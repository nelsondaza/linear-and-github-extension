{
  "name": "linear-and-github-extension",
  "displayName": "Linear and github extension",
  "version": "0.0.4",
  "description": "A basic extension to connect Linear and GitHub",
  "author": "Nelson Daza",
  "engines": {
    "node": ">=22.16.0"
  },
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "build": "plasmo build",
    "dev": "plasmo dev",
    "lint": "eslint . --cache --cache-location './build/.eslintcache' --ext .js,.mjs,.cjs,.jsx,.ts,.tsx --ignore-path ./.gitignore",
    "lint:files": "eslint --cache --cache-location './build/.eslintcache' --ext .js,.mjs,.cjs,.jsx,.ts,.tsx --ignore-path ./.gitignore --max-warnings 0",
    "lint:tsc": "tsc --noEmit",
    "package": "plasmo package",
    "prepare": "git config --local core.hooksPath ./packages/git-commands/hooks",
    "prettier": "prettier --cache --cache-location=./build/.prettiercache --ignore-path ./.gitignore ",
    "pretty": "pnpm prettier --write . && pnpm lint --fix"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.16",
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@linear/sdk": "^65.2.0",
    "@plasmohq/storage": "^1.15.0",
    "plasmo": "0.90.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-query": "^3.39.3"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/chrome": "0.1.32",
    "@types/node": "25.0.0",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "autoprefixer": "^10.4.22",
    "clsx": "^2.1.1",
    "cssnano": "^7.1.2",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-perfectionist": "^3.9.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-sort-class-members": "^1.21.0",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "eslint-plugin-testing-library": "^7.13.5",
    "eslint-plugin-unicorn": "^56.0.1",
    "postcss": "^8.5.6",
    "prettier": "3.7.4",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-organize-imports": "^4.3.0",
    "shx": "^0.3.4",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.19",
    "typescript": "5.9.3"
  },
  "manifest": {
    "host_permissions": [
      "*://*.github.com/*",
      "*://*.linear.app/*"
    ]
  }
}
