{
  "name": "linear-and-github-extension",
  "displayName": "Linear and github extension",
  "version": "0.0.1",
  "description": "A basic extension to connect Linear and GitHub",
  "author": "Nelson Daza",
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "build": "plasmo build",
    "dev": "plasmo dev",
    "lint": "eslint . --cache --cache-location './build/.eslintcache' --ext .js,.mjs,.cjs,.jsx,.ts,.tsx --ignore-path ./.gitignore",
    "lint:files": "eslint --cache --cache-location './build/.eslintcache' --ext .js,.mjs,.cjs,.jsx,.ts,.tsx --ignore-path ./.gitignore --max-warnings 0",
    "lint:tsc": "tsc --noEmit",
    "package": "plasmo package",
    "postinstall": "shx cp -r ./packages/git-commands/pre-* .git/hooks",
    "pretty": "prettier --write --ignore-path ./.gitignore . && pnpm lint --fix"
  },
  "dependencies": {
    "@linear/sdk": "^32.0.0",
    "plasmo": "0.89.3",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/chrome": "0.0.280",
    "@types/node": "22.8.6",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "cssnano": "^7.0.6",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-perfectionist": "^3.9.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-sort-class-members": "^1.21.0",
    "eslint-plugin-storybook": "^0.10.1",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "eslint-plugin-testing-library": "^6.4.0",
    "eslint-plugin-unicorn": "^56.0.0",
    "postcss": "^8.4.47",
    "prettier": "3.3.3",
    "shx": "^0.3.4",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^3.4.14",
    "typescript": "5.6.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ]
  }
}
