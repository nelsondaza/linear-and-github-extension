{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "lint": {
      "inputs": [
        "!dist/",
        "!.node_modules",
        "**/*.cjs",
        "**/*.cts",
        "**/*.js",
        "**/*.jsx",
        "**/*.mjs",
        "**/*.mts",
        "**/*.ts",
        "**/*.tsx"
      ],
      "outputs": ["./dist/.eslintcache"]
    },
    "lint:files": {
      "cache": false,
      "inputs": [
        "!dist/",
        "!.node_modules",
        "**/*.cjs",
        "**/*.cts",
        "**/*.js",
        "**/*.jsx",
        "**/*.mjs",
        "**/*.mts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.json"
      ]
    },
    "lint:tsc": {
      "inputs": [
        "!dist/",
        "!.node_modules",
        "**/*.cjs",
        "**/*.cts",
        "**/*.js",
        "**/*.jsx",
        "**/*.mjs",
        "**/*.mts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.json"
      ]
    },
    "pretty": {
      "inputs": [
        "!dist/",
        "!.node_modules",
        "**/*.cjs",
        "**/*.cts",
        "**/*.js",
        "**/*.jsx",
        "**/*.mjs",
        "**/*.mts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.json"
      ],
      "outputs": ["./dist/.eslintcache"]
    }
  }
}
