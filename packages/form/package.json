{
  "name": "@repo/form",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/public/index.js",
  "types": "./dist/public/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/public/index.d.mts",
        "default": "./dist/public/index.mjs"
      },
      "require": {
        "types": "./dist/public/index.d.ts",
        "default": "./dist/public/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsup -- ",
    "dev": "tsup --watch",
    "gen:rc": "turbo gen run rc && yarn pretty",
    "lint": "eslint ./src --cache --cache-location './dist/.eslintcache' --ext .js,.jsx,.ts,.tsx --ignore-path ../../.gitignore",
    "lint:files": "eslint --cache --cache-location './dist/.eslintcache' --ext .js,.jsx,.ts,.tsx --ignore-path ../../.gitignore --max-warnings 0",
    "lint:tsc": "tsc --noEmit",
    "pretty": "prettier --write --ignore-path ../../.gitignore ./src && yarn lint --fix",
    "serve": "tsup --watch"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@repo/ui": "*",
    "@repo/utils": "*",
    "@turbo/gen": "^2.2.3",
    "@types/node": "^22.8.5",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@adobe/react-spectrum": "^3.37.1",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.1.5",
    "@internationalized/date": "^3.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
