{
  "name": "@repo/tailwind-config",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "publishConfig": {
    "access": "public"
  },
  "main": "tailwind.config.ts",
  "files": [
    "postcss.config.js",
    "postcss.config.next.js",
    "styles.css",
    "styles.scss",
    "tailwind.config.ts",
    "tailwind.css"
  ],
  "scripts": {
    "lint": "eslint . --cache --cache-location './dist/.eslintcache' --ext .js,.jsx,.ts,.tsx --ignore-path ../../.gitignore",
    "lint:files": "eslint --cache --cache-location './dist/.eslintcache' --ext .js,.jsx,.ts,.tsx --ignore-path ../../.gitignore --max-warnings 0",
    "lint:tsc": "tsc --noEmit",
    "pretty": "prettier --write --ignore-path ../../.gitignore . && yarn lint --fix"
  },
  "devDependencies": {
    "@headlessui/tailwindcss": "^0.2.1",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@tailwindcss/forms": "^0.5.9",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14"
  }
}
