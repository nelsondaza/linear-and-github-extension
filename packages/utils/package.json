{
  "name": "@repo/utils",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/public/index.js",
  "types": "./dist/public/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/public/index.d.mts",
        "default": "./dist/public/index.mjs"
      },
      "require": {
        "types": "./dist/public/index.d.ts",
        "default": "./dist/public/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsup -- ",
    "dev": "tsup --watch",
    "lint": "eslint ./src --cache --cache-location './dist/.eslintcache' --ext .js,.jsx,.ts,.tsx --ignore-path ../../.gitignore",
    "lint:files": "eslint --cache --cache-location './dist/.eslintcache' --ext .js,.jsx,.ts,.tsx --ignore-path ../../.gitignore --max-warnings 0",
    "lint:tsc": "tsc --noEmit",
    "pretty": "prettier --write --ignore-path ../../.gitignore ./src && yarn lint --fix",
    "serve": "tsup --watch"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^22.8.5",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.4",
    "tsup": "^8.3.5"
  }
}
