{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "outputs": ["dist/"]
    },
    "dev": {
      "cache": false,
      "interruptible": true,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["@repo/utils#build"],
      "inputs": [
        "!dist/",
        "!.node_modules",
        "**/*.cjs",
        "**/*.cts",
        "**/*.js",
        "**/*.jsx",
        "**/*.mjs",
        "**/*.mts",
        "**/*.ts",
        "**/*.tsx"
      ],
      "outputs": ["./dist/.eslintcache"]
    },
    "lint:files": {
      "cache": false,
      "dependsOn": ["@repo/utils#build"]
    },
    "lint:tsc": {
      "inputs": [
        "!dist/",
        "!.node_modules",
        "**/*.cjs",
        "**/*.cts",
        "**/*.js",
        "**/*.jsx",
        "**/*.mjs",
        "**/*.mts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.json"
      ],
      "dependsOn": ["@repo/utils#build"]
    },
    "pretty": {
      "inputs": [
        "!dist/",
        "!.node_modules",
        "**/*.cjs",
        "**/*.cts",
        "**/*.js",
        "**/*.jsx",
        "**/*.mjs",
        "**/*.mts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.json"
      ],
      "outputs": ["./dist/.eslintcache"]
    },
    "serve": {
      "cache": false,
      "interruptible": true,
      "persistent": true
    }
  }
}
